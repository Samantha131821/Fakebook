<div class="container">
    <div class="profile-header">
      <div class="profile-img">
        <img src="https://avatars.githubusercontent.com/u/108702715?v=4" width="200" alt="">
      </div>
      </div>

  <h1 class="title">Fakebook</h1>
  <div class="profile-nav card">
    <h2 class="user-name"> Welcome, {{user.user_name}}!</h2>
        <div class="info">
        <h3 class="header1">Account Info</h3>
          <label class="names">Name: {{name}}</label>
          <label class="member">Member Since: {{memberSince}}</label>
        <h3 class="basic-info">Basic Info</h3>
          <label class="gender">Gender: {{gender}}</label>
          <label class="city-state">Hometown:{{homeTown}}</label>
          <label class="birthday">Birthday: {{birthday}}</label>
        </div>
  </div>

    <div class="left-column card">
        <h3 class="bio">Bio:{{bio}}</h3>
    </div>

<div class="profile card">
    <div class="notification">
      <i class="fa fa-bell"></i>
      <span class="alert-message">5</span>
    </div>
    <div class="main">
        <div class="left-side">
            <p class="phone">
                <i class="fa fa-phone">
                </i>phone number: {{phone}}</p>
                <p class="email"><i class="fa fa-envelope">
                </i>email address: {{email}}</p>
        </div>
    </div>
</div>
<div class="friends">
  <ul>
    <li>friend 1</li>
    <li>friend 2</li>
    <li>friend 3</li>
  </ul>
</div>
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="project-desc">What's on your mind...:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Recent Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.post_id}}">{{post.post_content}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.post_id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
</div>

<script src="../js/post.js"></script>

